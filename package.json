{
  "name": "rfid-mqtt-dashboard",
  "description": "HTTPS-only RFID Access Control Dashboard with real-time monitoring",
  "engines": {
    "node": "^18.17.0 || ^20.3.0 || >=21.0.0"
  },
  "engines-annotation": "Mostly required by sharp which needs a Node-API v9 compatible runtime",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.types": "tsc --incremental --noEmit",
    "deploy": "echo 'Run \"npm run qwik add\" to install a server adapter'",
    "predev": "node scripts/generate-certs.js",
    "dev": "concurrently -k -n VITE,BRIDGE -c \"auto\" \"npm:dev.vite\" \"npm:live-updates\"",
    "dev.vite": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "generate-certs": "node scripts/generate-certs.js",
    "prepreview": "node scripts/generate-certs.js",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\"",
    "preview": "qwik build preview && vite preview --open",
    "prestart": "node scripts/generate-certs.js",
    "start": "vite --open --mode ssr",
    "live-updates": "node scripts/live-updates-server.js",
    "qwik": "qwik"
  },
  "devDependencies": {
    "@builder.io/qwik": "^1.17.2",
    "@builder.io/qwik-city": "^1.17.2",
    "@eslint/js": "latest",
    "@types/node": "20.19.0",
    "concurrently": "^9.2.1",
    "eslint": "9.32.0",
    "eslint-plugin-qwik": "^1.17.2",
    "globals": "16.4.0",
    "prettier": "3.6.2",
    "typescript": "5.4.5",
    "typescript-eslint": "8.38.0",
    "typescript-plugin-css-modules": "latest",
    "undici": "*",
    "vite": "7.1.11",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
